<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/lat"
        android:layout_alignBottom="@+id/colorImg"
        android:layout_toRightOf="@+id/colorImg"
        android:layout_toEndOf="@+id/colorImg"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/colorImg"
        android:src="#ffff1f15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/longitude"
        android:layout_alignTop="@+id/lat"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="193dp"
        android:layout_marginEnd="193dp" />
</RelativeLayout>